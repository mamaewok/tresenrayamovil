<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <TableRow>

            <com.example.tresenrayamovil.BotonJuego
                android:id="@+id/Btn1_1"
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:textSize="40sp" />

            <com.example.tresenrayamovil.BotonJuego
                android:id="@+id/Btn1_2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="40sp" />

            <com.example.tresenrayamovil.BotonJuego
                android:id="@+id/Btn1_3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="40sp" />
        </TableRow>

        <TableRow>

            <com.example.tresenrayamovil.BotonJuego
                android:id="@+id/Btn2_1"
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:textSize="40sp" />

            <com.example.tresenrayamovil.BotonJuego
                android:id="@+id/Btn2_2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="40sp" />

            <com.example.tresenrayamovil.BotonJuego
                android:id="@+id/Btn2_3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="40sp" />
        </TableRow>

        <TableRow>

            <com.example.tresenrayamovil.BotonJuego
                android:id="@+id/Btn3_1"
                android:layout_width="80dp"
                android:layout_height="65dp"
                android:textSize="40sp" />

            <com.example.tresenrayamovil.BotonJuego
                android:id="@+id/Btn3_2"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="40sp" />

            <com.example.tresenrayamovil.BotonJuego
                android:id="@+id/Btn3_3"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="40sp" />
        </TableRow>
    </TableLayout>
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tableLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#CC2EFA" />

    <Button
        android:id="@+id/BtnReinicio"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:text="@string/reinicio" />
    
    <Button
        android:id="@+id/BtnAtras"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/atras" />

</RelativeLayout>